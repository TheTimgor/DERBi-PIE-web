extends layout

block content
    .container
        .row.justify-content-center.align-items-center
            img(src="images/DERBi-PIE-logo.png" class="splash-image")
        .row.justify-content-center.align-items-top
            .col-lg-6
                h1.text-center.mb-4 Login
                if error
                    .alert.alert-danger.text-center #{error}
                form(method="POST", action="/login")
                    .form-group.mb-3
                        label.form-label(for="username") Username
                        input.form-control#username(type="text", name="username", placeholder="Enter your username", required)
                    .form-group.mb-3
                        label.form-label(for="password") Password
                        input.form-control#password(type="password", name="password", placeholder="Enter your password", required)
                    .d-grid.gap-2.mb-3
                        button.btn.btn-success(type="submit") Log In
                    .text-center
                        p Don't have an account?&nbsp;
                            a(href="/login/register") Register here